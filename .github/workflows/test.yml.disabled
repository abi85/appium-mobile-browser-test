name: Appium Mobile Tests

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main, develop ]
  schedule:
    # Run tests daily at 2 AM UTC
    - cron: '0 2 * * *'

jobs:
  test-ios:
    name: iOS Tests
    runs-on: macos-latest
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v3
    
    - name: Setup Node.js
      uses: actions/setup-node@v3
      with:
        node-version: '18'
        cache: 'npm'
    
    - name: Install dependencies
      run: npm ci
    
    - name: Install Appium
      run: |
        npm install -g appium
        appium driver install xcuitest
    
    - name: List available simulators
      run: xcrun simctl list devices
    
    - name: Start Appium server
      run: |
        appium &
        sleep 5
    
    - name: Run iOS tests
      run: npm run test:ios
      env:
        PLATFORM: ios
        IOS_DEVICE_NAME: iPhone 14
        IOS_PLATFORM_VERSION: 16.0
    
    - name: Upload test reports
      if: always()
      uses: actions/upload-artifact@v3
      with:
        name: ios-test-reports
        path: |
          reports/
          logs/
          screenshots/
    
    - name: Upload screenshots on failure
      if: failure()
      uses: actions/upload-artifact@v3
      with:
        name: ios-failure-screenshots
        path: screenshots/

  test-android:
    name: Android Tests
    runs-on: macos-latest
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v3
    
    - name: Setup Node.js
      uses: actions/setup-node@v3
      with:
        node-version: '18'
        cache: 'npm'
    
    - name: Install dependencies
      run: npm ci
    
    - name: Install Appium
      run: |
        npm install -g appium
        appium driver install uiautomator2
    
    - name: Setup Android SDK
      uses: android-actions/setup-android@v2
    
    - name: Create Android Emulator
      run: |
        echo "y" | sdkmanager "system-images;android-33;google_apis;x86_64"
        echo "no" | avdmanager create avd -n test_emulator -k "system-images;android-33;google_apis;x86_64" --force
    
    - name: Start Android Emulator
      run: |
        $ANDROID_HOME/emulator/emulator -avd test_emulator -no-window -no-audio -no-boot-anim &
        adb wait-for-device shell 'while [[ -z $(getprop sys.boot_completed) ]]; do sleep 1; done;'
    
    - name: Start Appium server
      run: |
        appium &
        sleep 5
    
    - name: Run Android tests
      run: npm run test:android
      env:
        PLATFORM: android
        ANDROID_DEVICE_NAME: test_emulator
        ANDROID_PLATFORM_VERSION: 13.0
    
    - name: Upload test reports
      if: always()
      uses: actions/upload-artifact@v3
      with:
        name: android-test-reports
        path: |
          reports/
          logs/
          screenshots/
    
    - name: Upload screenshots on failure
      if: failure()
      uses: actions/upload-artifact@v3
      with:
        name: android-failure-screenshots
        path: screenshots/

